{
  "name": "talio",
  "version": "1.0.7",
  "description": "Talio - HR that runs itself. Desktop application for macOS and Windows.",
  "main": "src/main.js",
  "author": "Talio",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder --mac --universal",
    "build:arm64": "electron-builder --mac --arm64",
    "build:x64": "electron-builder --mac --x64",
    "build:universal": "electron-builder --mac --universal",
    "build:win": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:all": "electron-builder --mac --universal && electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.talio.app",
    "productName": "Talio",
    "copyright": "Copyright Â© 2025 Talio",
    "compression": "normal",
    "protocols": [
      {
        "name": "Talio",
        "schemes": ["talio"]
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "extendInfo": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "Talio Protocol",
            "CFBundleURLSchemes": ["talio"]
          }
        ],
        "NSScreenCaptureDescription": "Talio HRMS needs screen capture access for productivity monitoring.",
        "NSCameraUsageDescription": "Talio HRMS may use the camera for video calls and profile photos.",
        "NSMicrophoneUsageDescription": "Talio HRMS may use the microphone for audio calls.",
        "NSLocationWhenInUseUsageDescription": "Talio HRMS may use your location for attendance tracking.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Talio HRMS may use your location for attendance and geo-fencing.",
        "LSUIElement": false,
        "LSBackgroundOnly": false,
        "SUEnableAutomaticChecks": true,
        "SUFeedURL": "https://talio.in/updates/mac/appcast.xml"
      }
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/auto-launch/**/*",
      "node_modules/active-win/**/*",
      "node_modules/screenshot-desktop/**/*",
      "node_modules/node-global-key-listener/**/*",
      "**/*.node"
    ],
    "files": [
      "src/**/*",
      "assets/**/*",
      "preload.js",
      "maya-preload.js",
      "maya-blob.html",
      "maya-widget.html",
      "dot-matrix-overlay.html",
      ".env"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "auto-launch": "^5.0.6",
    "axios": "^1.13.2",
    "dotenv": "^16.0.3",
    "electron-store": "^8.1.0",
    "node-global-key-listener": "^0.3.0",
    "screenshot-desktop": "^1.15.3",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
