# ===========================================
# HRMS SYSTEM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local for development
# For production deployment, set these in your hosting platform

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For local development: mongodb://localhost:27017/hrms_db
# For production: Use MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://avirajsharma_db_user:aviraj@taliocluster.mvnlgwj.mongodb.net/hrms_db?
# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# NextAuth Configuration
NEXTAUTH_URL=https://app.talio.in
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-key-here

# JWT Secret for API authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here

# =========================================== 
# APPLICATION CONFIGURATION
# ===========================================
# App Name and URL
NEXT_PUBLIC_APP_NAME=Talio HRMS
NEXT_PUBLIC_APP_URL=https://app.talio.in

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
# For sending notifications and emails (e.g. Hostinger SMTP)
# Hostinger SMTP (example - replace with your actual mailbox & password in .env.local / server env)
EMAIL_HOST=smtp.hostinger.com
EMAIL_PORT=465
EMAIL_SECURE=true

# SMTP Authentication (sender mailbox)
EMAIL_USER=info@talio.in
EMAIL_PASSWORD=your-email-password

# Email Sender Information
EMAIL_FROM_NAME=Talio HRMS
EMAIL_FROM_EMAIL=info@talio.in

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (5MB = 5242880)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./public/uploads

# ===========================================
# ADDITIONAL PRODUCTION SETTINGS
# ===========================================
# Node Environment
NODE_ENV=production

# API Rate Limiting (requests per minute)
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_MAX_AGE=604800

# ===========================================
# GOOGLE OAUTH CONFIGURATION
# ===========================================
# Required for Google Sign-In functionality
# Get these from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ===========================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# ===========================================
# If you plan to integrate with external services

# AWS S3 (if using for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary (alternative for file storage)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# SendGrid (for email services)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# MONITORING & ANALYTICS (Optional)
# ===========================================
# Sentry for error tracking
# SENTRY_DSN=your-sentry-dsn

# Google Analytics
# NEXT_PUBLIC_GA_ID=your-google-analytics-id

# ===========================================
# PUSH NOTIFICATIONS - ONESIGNAL
# ===========================================
# OneSignal Configuration
# Sign up at: https://onesignal.com
# Create a new app and get your App ID and REST API Key

# OneSignal App ID (from OneSignal dashboard)
ONESIGNAL_APP_ID=your-onesignal-app-id

# OneSignal REST API Key (from OneSignal dashboard > Settings > Keys & IDs)
# Get this from: https://app.onesignal.com/apps/YOUR_APP_ID/settings/keys
ONESIGNAL_REST_API_KEY=your-onesignal-rest-api-key

# ===========================================
# NOTIFICATION SCHEDULER
# ===========================================
# Secret key for cron job that processes scheduled/recurring notifications
# Generate a random string: openssl rand -base64 32
CRON_SECRET=your-random-cron-secret-key-here

# ===========================================
# FIREBASE CLOUD MESSAGING (PUSH NOTIFICATIONS)
# ===========================================
# Get these from: https://console.firebase.google.com/
# Project Settings → General → Your apps → Web app

# Firebase Client Configuration (Public - goes to browser)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin SDK (Private - server only)
# Get from: Project Settings → Service Accounts → Generate New Private Key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# VAPID Key for Web Push (get from Project Settings → Cloud Messaging → Web Push certificates)
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key

# ===========================================
# LEGACY PUSH NOTIFICATIONS (VAPID KEYS)
# ===========================================
# Only needed if not using OneSignal
# Generate using: npx web-push generate-vapid-keys
# NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
# VAPID_PRIVATE_KEY=your-vapid-private-key
# VAPID_EMAIL=mailto:your-email@example.com

# ===========================================
# MAYA AI ASSISTANT CONFIGURATION
# ===========================================
# OpenAI Configuration (for Maya AI assistant)
# Get your API key from: https://platform.openai.com/api-keys
NEXT_PUBLIC_OPENAI_API_KEY=your-api-key-here
NEXT_PUBLIC_OPENAI_MODEL=gpt-4o
NEXT_PUBLIC_OPENAI_API_URL=https://api.openai.com/v1/chat/completions

# ElevenLabs Configuration (for text-to-speech)
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
NEXT_PUBLIC_ELEVENLABS_API_KEY=your-api-key-here
NEXT_PUBLIC_ELEVENLABS_VOICE_ID=your-voice-id-here
NEXT_PUBLIC_ELEVENLABS_API_URL=https://api.elevenlabs.io/v1/text-to-speech/

# Tavily Search API (for internet access with OpenAI)
# Get your API key from: https://app.tavily.com/
NEXT_PUBLIC_TAVILY_API_KEY=your-api-key-here

# Gemini Configuration (optional alternative to OpenAI)
# Get your API key from: https://makersuite.google.com/app/apikey
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key-here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Database Name
MONGODB_DB_NAME=hrms_db
