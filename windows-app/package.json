{
  "name": "talio",
  "version": "1.0.2",
  "description": "Talio - HR that runs itself. Desktop application for Windows.",
  "main": "main.js",
  "author": {
    "name": "Talio",
    "email": "support@talio.in"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:win64": "electron-builder --win --x64",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.talio.app",
    "productName": "Talio",
    "copyright": "Copyright Â© 2025 Talio",
    "compression": "maximum",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "maya-preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "maya-blob.html",
      "maya-widget.html",
      "dot-matrix-overlay.html",
      "assets/**/*",
      "!node_modules/**/*",
      "!**/*.map",
      "!**/*.md",
      "!**/test/**",
      "!**/tests/**",
      "!**/docs/**",
      "!**/.git/**"
    ],
    "asarUnpack": [],
    "electronLanguages": ["en-US"],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Talio",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Talio",
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "perMachine": false,
      "allowElevation": true,
      "warningsAsErrors": false,
      "menuCategory": "Talio",
      "differentialPackage": false
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": ["**/*"]
      }
    ],
    "afterPack": "./scripts/remove-locales.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0"
  },
  "optionalDependencies": {
    "active-win": "^8.0.0",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  }
}
