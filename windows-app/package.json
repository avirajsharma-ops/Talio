{
  "name": "talio",
  "version": "1.0.0",
  "description": "Talio - HR that runs itself. Desktop application for Windows.",
  "main": "main.js",
  "author": {
    "name": "Talio",
    "email": "support@talio.in"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64 --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:portable": "electron-builder --win portable --x64",
    "build:all": "electron-builder --win nsis portable --x64 --ia32",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.talio.app",
    "productName": "Talio",
    "copyright": "Copyright Â© 2025 Talio",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "maya-preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "maya-blob.html",
      "maya-widget.html",
      "dot-matrix-overlay.html",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "publisherName": "Talio",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Talio",
      "runAfterFinish": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "perMachine": true,
      "allowElevation": true,
      "include": "installer.nsh",
      "warningsAsErrors": false,
      "menuCategory": "Talio"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}-${arch}.${ext}",
      "requestExecutionLevel": "admin"
    },
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "node-global-key-listener": "^0.3.0"
  },
  "optionalDependencies": {
    "active-win": "^8.0.0",
    "node-machine-id": "^1.1.12",
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "png-to-ico": "^2.1.8"
  }
}
