{
  "name": "talio",
  "version": "2.0.0",
  "description": "Talio - HR Management System Desktop App with Productivity Monitoring",
  "main": "main.js",
  "author": {
    "name": "Talio",
    "email": "support@talio.in",
    "url": "https://talio.in"
  },
  "license": "MIT",
  "homepage": "https://app.talio.in",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.talio.app",
    "productName": "Talio",
    "copyright": "Copyright Â© 2025 Talio",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "compression": "maximum",
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "offline.html",
      "assets/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.ts",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.map"
    ],
    "asar": true,
    "asarUnpack": [
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Talio",
      "legalTrademarks": "Talio",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Talio",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Talio needs camera access for video meetings.",
        "NSMicrophoneUsageDescription": "Talio needs microphone access for video meetings.",
        "NSLocationUsageDescription": "Talio needs location access for attendance geofencing.",
        "NSLocationWhenInUseUsageDescription": "Talio needs location access for attendance geofencing.",
        "NSScreenCaptureDescription": "Talio needs screen recording permission for productivity monitoring.",
        "LSBackgroundOnly": false,
        "LSUIElement": false
      }
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Office",
      "desktop": {
        "StartupNotify": "true",
        "StartupWMClass": "Talio"
      }
    },
    "publish": null
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "auto-launch": "^5.0.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
